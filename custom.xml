<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?eclipse.ant.import?>
<project name="gt-minecraft Server" basedir="." default="startBukkitServer">

	<!-- so the compiler wont nag -->
	<import file="build.xml"/>

	<property name="bukkitDir" value="res/CraftBukkit"/>
	
    <target name="jarServerPlugin" depends="build">
        <mkdir dir="${bukkitDir}/plugins"/>
        <jar destfile="${bukkitDir}/plugins/HelloWorld.jar" basedir="bin">
        	<fileset file="plugin.yml" />
        </jar>
    </target>

	<target name="startBukkitServer" depends="jarServerPlugin">
		<exec dir="${bukkitDir}" executable="cmd">
		  <arg line="/c RUN.bat"/>
		</exec>
		
	</target>
        	
</project>